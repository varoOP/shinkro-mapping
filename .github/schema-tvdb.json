{
    "$id": "https://github.com/varoOP/shinkro-mapping/blob/main/.github/schema-tvdb.json",
    "title": "shinkro tvdb-mal custom mapping schema",
    "default": {},
    "type": "object",
    "required": [
        "AnimeMap"
    ],
    "properties": {
        "AnimeMap": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "malid": {
                        "type": "integer",
                        "minimum": 1
                    },
                    "title": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string"
                    },
                    "tvdbid": {
                        "type": "integer"
                    },
                    "tvdbseason": {
                        "type": "integer"
                    },
                    "start": {
                        "type": "integer"
                    },
                    "useMapping": {
                        "type": "boolean"
                    },
                    "animeMapping": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "tvdbseason": {
                                    "type": "integer"
                                },
                                "start": {
                                    "type": "integer"
                                },
                                "mappingType": {
                                    "type": "string",
                                    "enum": ["explicit", "range"]
                                },
                                "explicitEpisodes": {
                                    "type": "object",
                                    "additionalProperties": {
                                        "type": "integer",
                                        "minimum": 1
                                    },
                                    "description": "Map of TVDB episode number to MAL episode number (tvdbEp -> malEp)"
                                },
                                "skipMalEpisodes": {
                                    "type": "array",
                                    "items": {
                                        "type": "integer",
                                        "minimum": 1
                                    },
                                    "description": "List of MAL episode numbers to skip when using range mapping"
                                }
                            },
                            "required": [
                                "tvdbseason",
                                "start"
                            ]
                        }
                    }
                },
                "required": [
                    "malid",
                    "title",
                    "type",
                    "tvdbid",
                    "tvdbseason",
                    "start",
                    "useMapping",
                    "animeMapping"
                ]
            }
        }
    }
}